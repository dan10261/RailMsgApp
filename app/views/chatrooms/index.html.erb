<h2 class="ui center aligned  medium icon header">
  <i class="circular coffee icon orange"></i>
  Say something
</h2>

<div class="ui two column grid chatbox">
	<div class="twelve wide column">
		 <div class="ui fluid raised card chatboxcard">
		   <div class="content" id="messages">
				<div class="ui feed" id="message-container">
					<%= render @messages %><!---render message partial html and add the message information to it----->
				</div>
			</div><!---End of card----->
			 <div class="content">
		  	 	<%= form_for(@message,html: {class:"ui reply form", role: "form"}, url: message_path, remote: true) do |f|%>
			  		<div class="field">
			  			<div class="ui fluid icon input">
			  			<%= f.text_field :body, placeholder: "Enter a message..."%>
			  			<%= f.button '<i class = "bordered inverted orange icon edit"></i>'.html_safe%>
			  			</div>
			  		</div>
		  		<% end %>
		  	</div><!---End of reply input----->
		</div><!---End of chatboxcard----->
	</div>

  <div class="four wide column ">
 
	  	<div class="ui fluid raised card chatboxcard">  
	  		<div class="content">
		  	<div class="ui inverted vertical menu">
			
				  <a class="active item">
				    Home
				  </a>
				  <a class="item">
				    Messages
				  </a>
				  <a class="item">
				    Friends
				  </a>
				</div>
			</div>
	  </div>  
  </div>
</div>